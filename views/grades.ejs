<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Grades</title>
  <style>
    body {
      background-color: #d7e2ec;
    }

    .container {
      margin-top: 50px;
    }

    .btn-custom {
      background-color: #007bff;
      border: none;
    }

    .btn-custom:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/tasks">Tasks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/grades">Grades</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/habits">Habits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/quotes">Quotes</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Grades</h1>
      <a href="/addGrade" class="btn btn-success">Add Grade</a>
    </div>
    <table class="table table-hover mt-3">
      <thead>
        <tr>
          <th>Module Code</th>
          <th>Module Name</th>
          <th>Grade</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% grades.forEach(grade => { %>
          <tr>
            <td><a href="#" data-bs-toggle="modal" data-bs-target="#moduleModal<%= grade.gradeId %>"><%= grade.module_code %></a></td>
            <td><%= grade.module_name %></td>
            <td><%= grade.grade %></td>
            <td><a href="/editGrade/<%= grade.gradeId %>" class="btn btn-warning btn-sm">Edit</a></td>
            <td><a href="/deleteGrade/<%= grade.gradeId %>" class="btn btn-danger btn-sm">Delete</a></td>
          </tr>

          <!-- Modal -->
          <div class="modal fade" id="moduleModal<%= grade.gradeId %>" tabindex="-1" aria-labelledby="moduleModalLabel<%= grade.gradeId %>" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="moduleModalLabel<%= grade.gradeId %>">Module Details - <%= grade.module_code %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <p><strong>Module Name:</strong> <%= grade.module_name %></p>
                  <p><strong>Grade:</strong> <%= grade.grade %></p>
                  <!-- Add more details if needed -->
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
          
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
