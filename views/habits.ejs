<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Habits</title>
    <style>
        body {
            background-color: #d7e2ee; /* Change background color  */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/tasks">Tasks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/grades">Grades</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/habits">Habits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/quotes">Quotes</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <br>
        <div class="text-center"><h2>Habits</h2></div>
        <br>
        <a href="/addHabit" class="btn btn-primary">Add New Habit</a>
        <br><br>
        <table class="table table-hover small text-center">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Frequency</th>
                    <th>Last Checked</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < habits.length; i++) { %>
                <tr>
                    <td><%= habits[i].name %></td>
                    <td><%= habits[i].frequency %></td>
                    <td><%= habits[i].last_checked ? new Date(habits[i].last_checked).toLocaleDateString() : 'N/A' %></td>
                    <td><a href="/updateHabit/<%= habits[i].habitId %>" class="btn btn-warning">Edit</a></td>
                    <td><a href="/deleteHabit/<%= habits[i].habitId %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this habit?')">Delete</a></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
